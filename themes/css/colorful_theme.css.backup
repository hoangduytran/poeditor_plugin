/* Colorful Theme - Vibrant Solarized-inspired Theme */
/* Based on solarized color palette with modern touches */

/* === MAIN APPLICATION === */
QMainWindow {
    background-color: #f79f33ff;
    color: #586e75;
}

QWidget {
    background-color: #e6ce99ff;
    color: #586e75;
}

/* === PANELS === */
QWidget[objectName="explorer_panel"] {
    background-color: #f7f1e0;
    border-right: 1px solid #e9d9b7;
}

QWidget[objectName="search_panel"] {
    background-color: #eedfb6ff;
    border-right: 1px solid #e9d9b7;
}

QWidget[objectName="preferences_panel"] {
    background-color: #84736aff;
    border-right: 1px solid #e9d9b7;
}

QWidget[objectName="extensions_panel"] {
    background-color: #cfeab4ff;
    border-right: 1px solid #e9d9b7;
}

QWidget[objectName="account_panel"] {
    background-color: #abe2edff;
    border-right: 1px solid #e9d9b7;
}

/* === PANEL TITLES === */
QLabel[objectName="panel_title"] {
    background-color: transparent;
    color: #93a1a1;
    font-weight: normal;
    font-size: 11px;
    padding: 8px 12px 4px 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* === BUTTONS === */
QPushButton {
    background-color: #fdf6e3;
    border: 1px solid #d3cbb7;
    color: #586e75;
}

QPushButton:hover {
    background-color: #f5efdc;
    border-color: #268bd2;
}

QPushButton:pressed {
    background-color: #f0ead6;
    border-color: #268bd2;
}

QPushButton:disabled {
    background-color: #f7f3ea;
    border-color: #f7f3ea;
    color: #839496;
}

QPushButton[objectName="primary_button"] {
    background-color: #268bd2;
    color: #fdf6e3;
    border: none;
}

QPushButton[objectName="primary_button"]:hover {
    background-color: #2aa198;
}

QPushButton[objectName="primary_button"]:pressed {
    background-color: #0087bd;
}

QPushButton[objectName="secondary_button"] {
    background-color: #fdf6e3;
    color: #586e75;
    border: 1px solid #d3cbb7;
}

QPushButton[objectName="secondary_button"]:hover {
    background-color: #f5efdc;
    border-color: #268bd2;
}

QPushButton[objectName="secondary_button"]:pressed {
    background-color: #f0ead6;
}

/* Breadcrumb buttons */
QPushButton[breadcrumb="true"] {
    background-color: transparent;
    border: none;
    color: #268bd2;
    padding: 4px 6px;
    font-size: 12px;
}

QPushButton[breadcrumb="true"]:hover {
    background-color: #f5efdc;
    border-radius: 2px;
}

/* === INPUT FIELDS === */
QLineEdit {
    background-color: #fdf6e3;
    border-color: #d3cbb7;
    color: #586e75;
}

QLineEdit:focus {
    border-color: #268bd2;
    background-color: #fdf6e3;
}

QLineEdit:hover {
    border-color: #d3cbb7;
}

QLineEdit[objectName="search_input"] {
    background-color: #fdf6e3;
    border: 1px solid #d3cbb7;
    color: #586e75;
}

QLineEdit[objectName="search_input"]:focus {
    border-color: #268bd2;
    background-color: #fdf6e3;
}

/* === COMBO BOXES === */
QComboBox {
    background-color: #fdf6e3;
    border-color: #d3cbb7;
    color: #586e75;
}

QComboBox:focus {
    border-color: #268bd2;
}

QComboBox::drop-down {
    border: none;
    background-color: transparent;
    width: 20px;
}

QComboBox QAbstractItemView {
    background-color: #f0ead6;
    border: 1px solid #e9d9b7;
    color: #586e75;
}

/* === LIST WIDGETS === */
QListWidget {
    background-color: #f7f1e0;
    color: #586e75;
}

QListWidget::item {
    background-color: transparent;
    color: #586e75;
}

QListWidget::item:hover {
    background-color: #f5efdc;
}

QListWidget::item:selected {
    background-color: #b58900;
    color: #fdf6e3;
}

/* Explorer file list */
QListWidget[objectName="explorer_file_list"] {
    background-color: #f7f1e0;
    color: #586e75;
}

QListWidget[objectName="explorer_file_list"]::item {
    background-color: transparent;
    color: #586e75;
}

QListWidget[objectName="explorer_file_list"]::item:hover {
    background-color: #f5efdc;
}

QListWidget[objectName="explorer_file_list"]::item:selected {
    background-color: #b58900;
    color: #fdf6e3;
}

/* === TREE WIDGETS === */
QTreeView {
    background-color: #f7f1e0;
    color: #586e75;
}

QTreeView::item {
    background-color: transparent;
}

QTreeView::item:hover {
    background-color: #f5efdc;
}

QTreeView::item:selected {
    background-color: #b58900;
    color: #fdf6e3;
}

QTreeView::branch {
    background: transparent;
}

/* Search results table */
QTreeView[objectName="search_results_table"] {
    background-color: #f7f1e0;
    color: #586e75;
}

QTreeView[objectName="search_results_table"]::item {
    padding: 4px 8px;
    background-color: transparent;
    height: 20px;
}

QTreeView[objectName="search_results_table"]::item:hover {
    background-color: #f5efdc;
}

QTreeView[objectName="search_results_table"]::item:selected {
    background-color: #b58900;
    color: #fdf6e3;
}

QHeaderView[objectName="search_results_table"] {
    background-color: #f7f1e0;
    color: #93a1a1;
    border-bottom: 1px solid #e9d9b7;
}

QHeaderView[objectName="search_results_table"]::section {
    background-color: #f7f1e0;
    color: #93a1a1;
    border-bottom: 1px solid #e9d9b7;
}

QHeaderView[objectName="search_results_table"]::section:hover {
    background-color: #f5efdc;
}

/* === TABLE WIDGETS === */
QTableWidget {
    background-color: #f7f1e0;
    color: #586e75;
}

QTableWidget::item {
    padding: 4px 8px;
    background-color: transparent;
    height: 20px;
}

QTableWidget::item:hover {
    background-color: #f5efdc;
}

QTableWidget::item:selected {
    background-color: #b58900;
    color: #fdf6e3;
}

QHeaderView::section {
    background-color: #f7f1e0;
    color: #93a1a1;
    border-bottom: 1px solid #e9d9b7;
}

QTableWidget QHeaderView::section:hover {
    background-color: #f5efdc;
}

/* === TABS === */
QTabWidget::pane {
    background-color: #fdf6e3;
}

QTabBar::tab {
    background-color: #f0ead6;
    color: #93a1a1;
    border-right: 1px solid #e9d9b7;
}

QTabBar::tab:selected {
    background-color: #fdf6e3;
    color: #073642;
    border-bottom: 2px solid #268bd2;
}

QTabBar::tab:hover:not(:selected) {
    background-color: #f5efdc;
    color: #586e75;
}

/* === GROUP BOXES === */
QGroupBox {
    background-color: transparent;
    border-color: #e9d9b7;
    color: #586e75;
}

QGroupBox::title {
    color: #586e75;
}

QGroupBox[objectName="group_box"] {
    border-color: #e9d9b7;
    color: #586e75;
}

QGroupBox[objectName="group_box"]::title {
    color: #586e75;
}

/* === SCROLL AREAS === */
QScrollArea {
    background-color: #fdf6e3;
}

QScrollBar:vertical {
    background-color: #f7f1e0;
}

QScrollBar::handle:vertical {
    background-color: #93a1a1;
}

QScrollBar::handle:vertical:hover {
    background-color: #657b83;
}

QScrollBar:horizontal {
    background-color: #f7f1e0;
}

QScrollBar::handle:horizontal {
    background-color: #93a1a1;
}

QScrollBar::handle:horizontal:hover {
    background-color: #657b83;
}

/* === LABELS === */
QLabel {
    color: #586e75;
    background-color: transparent;
}

QLabel[objectName="info_label"] {
    color: #93a1a1;
    background-color: transparent;
}

QLabel[objectName="description_label"] {
    color: #93a1a1;
    background-color: transparent;
}

QLabel[objectName="version_label"] {
    color: #93a1a1;
    background-color: transparent;
    font-weight: bold;
}

QLabel[objectName="status_label"] {
    color: #93a1a1;
    background-color: transparent;
    font-size: 12px;
}

/* === CHECKBOXES === */
QCheckBox {
    color: #586e75;
    background-color: transparent;
}

QCheckBox::indicator {
    background-color: #fdf6e3;
    border-color: #d3cbb7;
}

QCheckBox::indicator:checked {
    background-color: #268bd2;
    border-color: #268bd2;
}

QCheckBox::indicator:hover {
    border-color: #268bd2;
}

/* === SPIN BOXES === */
QSpinBox {
    background-color: #fdf6e3;
    border-color: #d3cbb7;
    color: #586e75;
}

QSpinBox:focus {
    border-color: #268bd2;
}

/* === SLIDERS === */
QSlider::groove:horizontal {
    background-color: #f0ead6;
    height: 6px;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background-color: #268bd2;
    width: 16px;
    height: 16px;
    border-radius: 8px;
    margin: -5px 0;
}

QSlider::handle:horizontal:hover {
    background-color: #2aa198;
}

/* === MENU BAR (TITLE BAR) === */
QMenuBar {
    background-color: #f0ead6;
    color: #586e75;
    border-bottom: 1px solid #e9d9b7;
    padding: 4px 0;
    font-size: 13px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 4px 8px;
    margin: 0 2px;
    border-radius: 3px;
}

QMenuBar::item:selected {
    background-color: #f5efdc;
    color: #002b36;
}

QMenuBar::item:pressed {
    background-color: #eee8d5;
    color: #002b36;
}

/* === CONTEXT MENUS === */
QMenu {
    background-color: #f0ead6;
    border: 1px solid #e9d9b7;
    color: #586e75;
}

QMenu::item:selected {
    background-color: #f5efdc;
}

/* === STATUS BAR === */
QStatusBar {
    background-color: #268bd2;
    color: #fdf6e3;
    border: none;
    font-size: 12px;
    font-weight: normal;
    padding: 0;
    margin: 0;
}

QStatusBar::item {
    border: none;
    background-color: transparent;
    padding: 4px 12px;
    margin: 0;
}

QStatusBar QLabel {
    background-color: transparent;
    color: #fdf6e3;
    font-size: 12px;
    font-weight: normal;
    padding: 4px 0;
}

/* === TOOLTIPS === */
QToolTip {
    background-color: #f0ead6;
    color: #586e75;
    border-color: #e9d9b7;
}

/* === BREADCRUMB NAVIGATION === */
QScrollArea#breadcrumb_scroll {
    background-color: #f0ead6;
    border: 1px solid #e9d9b7;
    border-radius: 0;
}

/* === EXTENSION ITEMS === */
QWidget#extension_item {
    background-color: transparent;
    color: #586e75;
}

/* === ADDITIONAL WHITE EDGE FIXES === */

/* Splitter handles - common source of white lines */
QSplitter::handle {
    background-color: #e9d9b7;
    border: none;
}

QSplitter::handle:horizontal {
    width: 1px;
    background-color: #e9d9b7;
}

QSplitter::handle:vertical {
    height: 1px;
    background-color: #e9d9b7;
}

QSplitter::handle:hover {
    background-color: #268bd2;
}

/* Frame widgets */
QFrame {
    background-color: #fdf6e3;
    border: 1px solid #e9d9b7;
    color: #586e75;
}

QFrame[frameShape="0"] {
    border: none;
}

/* Scroll bar improvements */
QScrollBar::corner {
    background-color: #fdf6e3;
    border: none;
}

/* Size grip */
QSizeGrip {
    background-color: transparent;
    width: 16px;
    height: 16px;
}
