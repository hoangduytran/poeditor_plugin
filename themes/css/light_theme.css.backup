/* VS Code Light Theme - Authentic Light Theme */
/* Based on official VS Code Light color palette */

/* === MAIN APPLICATION === */
QMainWindow {
    background-color: #ffffff;
    color: #333333;
}

QWidget {
    background-color: #ffffff;
    color: #333333;
}

/* === PANELS === */
QWidget[objectName="explorer_panel"] {
    background-color: #f3f3f3;
    border-right: 1px solid #e5e5e5;
}

QWidget[objectName="search_panel"] {
    background-color: #f3f3f3;
    border-right: 1px solid #e5e5e5;
}

QWidget[objectName="preferences_panel"] {
    background-color: #f3f3f3;
    border-right: 1px solid #e5e5e5;
}

QWidget[objectName="extensions_panel"] {
    background-color: #f3f3f3;
    border-right: 1px solid #e5e5e5;
}

QWidget[objectName="account_panel"] {
    background-color: #f3f3f3;
    border-right: 1px solid #e5e5e5;
}

/* === PANEL TITLES === */
QLabel[objectName="panel_title"] {
    background-color: transparent;
    color: #999999;
    font-weight: normal;
    font-size: 11px;
    padding: 8px 12px 4px 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* === BUTTONS === */
QPushButton {
    background-color: #ffffff;
    border: 1px solid #cccccc;
    color: #333333;
}

QPushButton:hover {
    background-color: #e8e8e8;
    border-color: #0078d4;
}

QPushButton:pressed {
    background-color: #d6d6d6;
    border-color: #0078d4;
}

QPushButton:disabled {
    background-color: #f0f0f0;
    border-color: #f0f0f0;
    color: #666666;
}

QPushButton[objectName="primary_button"] {
    background-color: #0078d4;
    color: #ffffff;
    border: none;
}

QPushButton[objectName="primary_button"]:hover {
    background-color: #106ebe;
}

QPushButton[objectName="primary_button"]:pressed {
    background-color: #005a9e;
}

QPushButton[objectName="secondary_button"] {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #cccccc;
}

QPushButton[objectName="secondary_button"]:hover {
    background-color: #e8e8e8;
    border-color: #0078d4;
}

QPushButton[objectName="secondary_button"]:pressed {
    background-color: #d6d6d6;
}

/* Breadcrumb buttons */
QPushButton[breadcrumb="true"] {
    background-color: transparent;
    border: none;
    color: #0078d4;
    padding: 4px 6px;
    font-size: 12px;
}

QPushButton[breadcrumb="true"]:hover {
    background-color: #e6f3ff;
    border-radius: 2px;
}

/* === INPUT FIELDS === */
QLineEdit {
    background-color: #ffffff;
    border-color: #cccccc;
    color: #333333;
}

QLineEdit:focus {
    border-color: #0078d4;
    background-color: #ffffff;
}

QLineEdit:hover {
    border-color: #cccccc;
}

QLineEdit[objectName="search_input"] {
    background-color: #ffffff;
    border: 1px solid #cccccc;
    color: #333333;
}

QLineEdit[objectName="search_input"]:focus {
    border-color: #0078d4;
    background-color: #ffffff;
}

/* === COMBO BOXES === */
QComboBox {
    background-color: #ffffff;
    border-color: #cccccc;
    color: #333333;
}

QComboBox:focus {
    border-color: #0078d4;
}

QComboBox::drop-down {
    border: none;
    background-color: transparent;
    width: 20px;
}

QComboBox QAbstractItemView {
    background-color: #ececec;
    border: 1px solid #e5e5e5;
    color: #333333;
}

/* === LIST WIDGETS === */
QListWidget {
    background-color: #f3f3f3;
    color: #333333;
}

QListWidget::item {
    background-color: transparent;
    color: #333333;
}

QListWidget::item:hover {
    background-color: #e8e8e8;
}

QListWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

/* Explorer file list */
QListWidget[objectName="explorer_file_list"] {
    background-color: #f3f3f3;
    color: #333333;
}

QListWidget[objectName="explorer_file_list"]::item {
    background-color: transparent;
    color: #333333;
}

QListWidget[objectName="explorer_file_list"]::item:hover {
    background-color: #e8e8e8;
}

QListWidget[objectName="explorer_file_list"]::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

/* === TREE WIDGETS === */
QTreeView {
    background-color: #f3f3f3;
    color: #333333;
}

QTreeView::item {
    background-color: transparent;
}

QTreeView::item:hover {
    background-color: #e8e8e8;
}

QTreeView::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QTreeView::branch {
    background: transparent;
}

/* Search results table */
QTreeView[objectName="search_results_table"] {
    background-color: #f3f3f3;
    color: #333333;
}

QTreeView[objectName="search_results_table"]::item {
    padding: 4px 8px;
    background-color: transparent;
    height: 20px;
}

QTreeView[objectName="search_results_table"]::item:hover {
    background-color: #e8e8e8;
}

QTreeView[objectName="search_results_table"]::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QHeaderView[objectName="search_results_table"] {
    background-color: #f3f3f3;
    color: #999999;
    border-bottom: 1px solid #e5e5e5;
}

QHeaderView[objectName="search_results_table"]::section {
    background-color: #f3f3f3;
    color: #999999;
    border-bottom: 1px solid #e5e5e5;
}

QHeaderView[objectName="search_results_table"]::section:hover {
    background-color: #e8e8e8;
}

/* === TABLE WIDGETS === */
QTableWidget {
    background-color: #f3f3f3;
    color: #333333;
}

QTableWidget::item {
    padding: 4px 8px;
    background-color: transparent;
    height: 20px;
}

QTableWidget::item:hover {
    background-color: #e8e8e8;
}

QTableWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QHeaderView::section {
    background-color: #f3f3f3;
    color: #999999;
    border-bottom: 1px solid #e5e5e5;
}

QTableWidget QHeaderView::section:hover {
    background-color: #e8e8e8;
}

/* === TABS === */
QTabWidget::pane {
    background-color: #ffffff;
}

QTabBar::tab {
    background-color: #ececec;
    color: #999999;
    border-right: 1px solid #e5e5e5;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    color: #333333;
    border-bottom: 2px solid #0078d4;
}

QTabBar::tab:hover:not(:selected) {
    background-color: #e8e8e8;
    color: #333333;
}

/* === GROUP BOXES === */
QGroupBox {
    background-color: transparent;
    border-color: #e5e5e5;
    color: #333333;
}

QGroupBox::title {
    color: #333333;
}

QGroupBox[objectName="group_box"] {
    border-color: #e5e5e5;
    color: #333333;
}

QGroupBox[objectName="group_box"]::title {
    color: #333333;
}

/* === SCROLL AREAS === */
QScrollArea {
    background-color: #ffffff;
}

QScrollBar:vertical {
    background-color: #f3f3f3;
}

QScrollBar::handle:vertical {
    background-color: #c1c1c1;
}

QScrollBar::handle:vertical:hover {
    background-color: #a6a6a6;
}

QScrollBar:horizontal {
    background-color: #f3f3f3;
}

QScrollBar::handle:horizontal {
    background-color: #c1c1c1;
}

QScrollBar::handle:horizontal:hover {
    background-color: #a6a6a6;
}

/* === LABELS === */
QLabel {
    color: #333333;
    background-color: transparent;
}

QLabel[objectName="info_label"] {
    color: #999999;
    background-color: transparent;
}

QLabel[objectName="description_label"] {
    color: #999999;
    background-color: transparent;
}

QLabel[objectName="version_label"] {
    color: #999999;
    background-color: transparent;
    font-weight: bold;
}

QLabel[objectName="status_label"] {
    color: #999999;
    background-color: transparent;
    font-size: 12px;
}

/* === CHECKBOXES === */
QCheckBox {
    color: #333333;
    background-color: transparent;
}

QCheckBox::indicator {
    background-color: #ffffff;
    border-color: #cccccc;
}

QCheckBox::indicator:checked {
    background-color: #0078d4;
    border-color: #0078d4;
}

QCheckBox::indicator:hover {
    border-color: #0078d4;
}

/* === SPIN BOXES === */
QSpinBox {
    background-color: #ffffff;
    border-color: #cccccc;
    color: #333333;
}

QSpinBox:focus {
    border-color: #0078d4;
}

/* === SLIDERS === */
QSlider::groove:horizontal {
    background-color: #ececec;
    height: 6px;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background-color: #0078d4;
    width: 16px;
    height: 16px;
    border-radius: 8px;
    margin: -5px 0;
}

QSlider::handle:horizontal:hover {
    background-color: #106ebe;
}

/* === MENU BAR (TITLE BAR) === */
QMenuBar {
    background-color: #f3f3f3;
    color: #333333;
    border-bottom: 1px solid #e1e1e1;
    padding: 4px 0;
    font-size: 13px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 4px 8px;
    margin: 0 2px;
    border-radius: 3px;
}

QMenuBar::item:selected {
    background-color: #e8e8e8;
    color: #000000;
}

QMenuBar::item:pressed {
    background-color: #d0d0d0;
    color: #000000;
}

/* === CONTEXT MENUS === */
QMenu {
    background-color: #ececec;
    border: 1px solid #e5e5e5;
    color: #333333;
}

QMenu::item:selected {
    background-color: #e8e8e8;
}

/* === STATUS BAR === */
QStatusBar {
    background-color: #007ACC;
    color: #ffffff;
    border: none;
    font-size: 12px;
    font-weight: normal;
    padding: 0;
    margin: 0;
}

QStatusBar::item {
    border: none;
    background-color: transparent;
    padding: 4px 12px;
    margin: 0;
}

QStatusBar QLabel {
    background-color: transparent;
    color: #ffffff;
    font-size: 12px;
    font-weight: normal;
    padding: 4px 0;
}

/* === TOOLTIPS === */
QToolTip {
    background-color: #ececec;
    color: #333333;
    border-color: #e5e5e5;
}

/* === BREADCRUMB NAVIGATION === */
QScrollArea#breadcrumb_scroll {
    background-color: #ececec;
    border: 1px solid #e5e5e5;
    border-radius: 0;
}

/* === EXTENSION ITEMS === */
QWidget#extension_item {
    background-color: transparent;
    color: #333333;
}

/* === ADDITIONAL WHITE EDGE FIXES === */

/* Splitter handles - common source of white lines */
QSplitter::handle {
    background-color: #e5e5e5;
    border: none;
}

QSplitter::handle:horizontal {
    width: 1px;
    background-color: #e5e5e5;
}

QSplitter::handle:vertical {
    height: 1px;
    background-color: #e5e5e5;
}

QSplitter::handle:hover {
    background-color: #007acc;
}

/* Frame widgets */
QFrame {
    background-color: #ffffff;
    border: 1px solid #e5e5e5;
    color: #333333;
}

QFrame[frameShape="0"] {
    border: none;
}

/* Scroll bar improvements */
QScrollBar::corner {
    background-color: #ffffff;
    border: none;
}

/* Size grip */
QSizeGrip {
    background-color: transparent;
    width: 16px;
    height: 16px;
}
